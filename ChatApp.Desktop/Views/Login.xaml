<UserControl x:Class="ChatApp.Desktop.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Desktop.Views"
             mc:Ignorable="d" 
             MinHeight="100" MinWidth="160">
    <Grid Background="Gray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Margin="166,164,100,164" Width="209">
            <TextBox x:Name="Username" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Center" Width="160"></TextBox>
            <Button x:Name="LoginButton" Content="Login" Background="Green" Foreground="White" Margin="0,10,33,0" Click="Login" HorizontalAlignment="Right" Width="100"/>
        </StackPanel>
    </Grid>
</UserControl>
